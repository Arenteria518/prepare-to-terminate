
<div class="container-fluid splash">
    <div class="row">
       <!-- <%= image_tag("http://placehold.it/1950x600", :class => 'img-responsive') %>-->
    </div>
</div>

<div class="container">
    
    <div class="pager"></div>
    
    
    <% @posts.each do |post| %>
    <% if post.id % 4 == 0 %>
        <div class="row">
            <% end %>
        <div class="col-md-4 card">
            <p class="date pull-right"><%= post.created_at.strftime("%B, %d, %Y") %></p>
            <%= image_tag(post.image.url(:large), :class => 'img-responsive') %>
            <div class="info-card col-xs-10 col-xs-offset-1">
                <h3 class="title"> <%= link_to post.title, post %> </h3>
                <p><%= sanitize(truncate(post.body, length: 150)) %></p>
                <div class="pull-right">
                <%= link_to 'More', post, :class => 'button' %>
                </div>
            </div>
            
        </div>
        <% if post.id % 4 == 0 %>
        </div>
            <% end %>
    <% end %>
    
</div>
